                        <li><a href="/" runat="server" id="menu1">Hem</a></li>
                        <asp:LoginView runat="server">
                            <RoleGroups>
                                <asp:RoleGroup Roles="Lösöre">
                                    <ContentTemplate>
                                        <li><a href="product_description_losore.aspx">Lösöre</a>
                                        <ul>
                                            <li><a href="create_inspection.aspx" runat="server" id="menu2">Skapa</a></li>
                                            <li><a href="open_inspection.aspx" runat="server" id="menu3">Öppna</a></li>
                                        </ul>
                                    </li>
                                    </ContentTemplate>
                                </asp:RoleGroup>
                            </RoleGroups>
                        </asp:LoginView>
                        <asp:LoginView ID="LoginView2" runat="server">
                            <RoleGroups>
                                <asp:RoleGroup Roles="Jour">
                                    <ContentTemplate>
                                        <li><a href="/open_jour.aspx">Jour</a></li>
                                    </ContentTemplate>
                                </asp:RoleGroup>
                            </RoleGroups>
                        </asp:LoginView>
                        <li><a href="/products.aspx">Produkter</a>
                            <ul>
                                <li><a href="/product_description_jour.aspx">Jour</a></li>
                                <li><a href="/product_description_bygg.aspx">Byggskada</a></li>
                                <li><a href="/product_description_losore.aspx">Lösöre</a></li>
                            </ul>
                        </li>
                        <asp:LoginView ID="LoginView1" runat="server">
                            <RoleGroups>
                                <asp:RoleGroup Roles="Administrator">
                                    <ContentTemplate>
                                        <li><a href="/admin/company.aspx" runat="server" id="A1">Admin</a></li>
                                    </ContentTemplate>
                                </asp:RoleGroup>
                            </RoleGroups>
                        </asp:LoginView>
                        <asp:LoginView runat="server">
                            <AnonymousTemplate>
                                <li><a href="/login.aspx" runat="server" id="menu2">Logga in</a></li>
                            </AnonymousTemplate>
                            <LoggedInTemplate>
                                <li><a href="?a=logout" runat="server" id="logout">Logga ut</a></li>
